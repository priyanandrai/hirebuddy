datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String   @id @default(uuid())
  name      String
  phone     String   @unique
  role      Role
  createdAt DateTime @default(now())
  tasks     Task[] // ðŸ‘ˆ REQUIRED opposite relation
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String?
  status      TaskStatus @default(OPEN)
  userId      String
  createdAt   DateTime   @default(now())

  user User @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  HELPER
}

enum TaskStatus {
  OPEN
  ASSIGNED
  COMPLETED
}
