datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         String   @id @default(uuid())
  email      String?  @unique
  phone      String?  @unique   // âœ… OPTIONAL
  name       String?
  image      String?
  role       Role?
 // HELPER-specific fields
  skills      String?   // e.g. "Plumbing, Electrician"
  experience  Int?      // years
  city        String?
  isAvailable Boolean   @default(true)

  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  tasks     Task[] // ðŸ‘ˆ REQUIRED opposite relation
}

model Otp {
  id        String   @id @default(uuid())
  phone     String
  code      String
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime  @default(now())
}

model Task {
  id          String     @id @default(uuid())
  title       String
  description String?
  status      TaskStatus @default(OPEN)
  userId      String
  createdAt   DateTime   @default(now())

  user User @relation(fields: [userId], references: [id])
}

enum Role {
  USER
  HELPER
}

enum TaskStatus {
  OPEN
  ASSIGNED
  COMPLETED
}
